CT_CONFIG_VERSION="3"
CT_LOG_PROGRESS_BAR=n
CT_OMIT_TARGET_VENDOR=y

# this allows to build the config in CI (as root)
CT_EXPERIMENTAL=y
CT_ALLOW_BUILD_AS_ROOT=y
CT_ALLOW_BUILD_AS_ROOT_SURE=y

CT_ARCH_OR1K=y
CT_ARCH_USE_MMU=y
CT_KERNEL_LINUX=y

# Use specific version of GCC
CT_GCC_SRC_DEVEL=y
CT_GCC_DEVEL_VCS_git=y
CT_GCC_DEVEL_URL="git://gcc.gnu.org/git/gcc.git"
CT_GCC_DEVEL_BRANCH="gcc-9_1_0-release"
CT_GCC_V_9=y
CT_CC_GCC_LIBGOMP=y
CT_CC_GCC_LIBQUADMATH=y
CT_COMP_TOOLS_LIBTOOL=y

# LIBC
CT_LOCAL_PATCH_DIR="${CT_TOP_DIR}/patches"
CT_LIBC_MUSL=y
CT_MUSL_SRC_DEVEL=y
CT_MUSL_DEVEL_REVISION="ac304227bb3ea1787d581f17d76a5f5f3abff51f"
CT_MUSL_PATCH_LOCAL_BUNDLED=y

